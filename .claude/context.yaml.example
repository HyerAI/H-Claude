# .claude/context.yaml
# LIVE CONTEXT - Updated after every significant task/commit
# Read this at session start to resume work
# See: .claude/PM/SSoT/NORTHSTAR.md for project guidance
# See: .claude/PM/SSoT/ROADMAP.yaml for development phases

meta:
  last_modified: null  # Updated automatically

# PROJECT INFO - Customize for your project
project:
  name: '[PROJECT_NAME]'
  description: '[PROJECT_DESCRIPTION]'
  type: 'application'  # template | application | library

# Reference to development roadmap (the HOW)
# active_phases read directly from ROADMAP.yaml - no duplication
roadmap:
  path: .claude/PM/SSoT/ROADMAP.yaml

# THE BRAIN (What are we thinking about right now?)
focus:
  current_objective: null
  active_decisions: []

# THE LOG (Rolling history - last 10 actions only)
recent_actions: []

# THE QUEUE
tasks:
  active: []
  completed_this_session: []

# BLOCKERS (only if strictly blocking current active task)
blockers: []

# UNSORTED BACKLOG - Tasks not yet assigned to a phase
# Triage agent surfaces these; assign to phases or tech_debt
backlog: []
  # Example:
  # - id: BACK-001
  #   description: 'Task we noticed but not sure where it fits'
  #   added: '2026-01-02'

# THINK-TANK SESSIONS (phase sessions, side-quests)
# Roadmap sessions don't need tracking here - ROADMAP.yaml is the state
think_tank: []

# GIT COMMIT CONTROL (git-engineer watches this)
git:
  status: idle  # idle | ready | working
  note: ''
